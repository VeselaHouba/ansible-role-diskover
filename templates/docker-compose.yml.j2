---
version: '3'
services:
  diskover:
    image: linuxserver/diskover:v1.5.0.13-ls5
    privileged: true
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Europe/Prague
      - REDIS_HOST=redis
      - REDIS_PORT=6379
      - ES_HOST=elasticsearch
      - ES_PORT=9200
      - ES_USER=elastic
      - ES_PASS=changeme
      - RUN_ON_START=true
      - USE_CRON=true
    volumes:
      - {{ diskover_persistent_path }}/diskover.cfg:/config/diskover.cfg:ro
    ports:
      - {{ diskover_local_port }}:80
    restart: unless-stopped
    depends_on:
      - elasticsearch
      - redis
  elasticsearch:
    image: docker.elastic.co/elasticsearch/elasticsearch:5.6.9
{% if diskover_persist_data %}
    volumes:
      - {{ diskover_persistent_path }}/data/elasticsearch:/usr/share/elasticsearch/data
{% endif %}
    environment:
      - bootstrap.memory_lock=true
      - "ES_JAVA_OPTS=-Xms{{ diskover_es_memory }} -Xmx{{ diskover_es_memory }}"
    ulimits:
      memlock:
        soft: -1
        hard: -1
  redis:
    image: redis:alpine
{% if diskover_persist_data %}
    volumes:
      - {{ diskover_persistent_path }}/data/redis:/data
{% endif %}
